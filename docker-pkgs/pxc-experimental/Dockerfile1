FROM ronin/pxc1:release
MAINTAINER Raghavendra Prabhu raghavendra.prabhu@percona.com
RUN curl -s http://jenkins.percona.com/experimental/CENTOS/percona-experimental.repo > /etc/yum.repos.d/percona-experimental.repo 
RUN yum update -y 'Percona*'
EXPOSE 3306 4567 4568
CMD /sbin/service mysql bootstrap-pxc && tailf /dev/null
